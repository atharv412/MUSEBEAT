<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#596269"
        android:endColor="#041423"
        android:angle="135"/>

    <!-- Rounded corners -->
    <corners
        android:radius="20dp" />

    <!-- Border stroke -->
    <stroke
        android:width="0.5dp"
        android:color="#494343"/>

    <!-- Optional padding if needed -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
