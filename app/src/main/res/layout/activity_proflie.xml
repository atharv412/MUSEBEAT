<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Profile">

    <!-- Back Button -->
<!--    <ImageView-->
<!--        android:id="@+id/backButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="16dp"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:src="@drawable/ic_back_24"-->
<!--        android:contentDescription="Back"-->
<!--        app:tint="#FFFFFF" />-->

    <!-- Profile Heading -->
    <TextView
        android:id="@+id/profileHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileHeading"
        android:layout_marginTop="32dp"
        android:src="@drawable/round_account_circle_24"
        android:scaleType="centerCrop"
        android:background="@color/white"
        />
    <!--    android:background="@drawable/circle_background"-->

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="16dp"
        android:text="_ATHARVA'S_"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Edit Button -->
    <TextView
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Edit"
        android:textColor="#8A2BE2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Info Block -->
    <LinearLayout
        android:id="@+id/infoBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/profileName"
        android:layout_marginTop="32dp"
        android:background="#1A1A1A"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: N/A"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Followers -->
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:text="Followers: 0"-->
        <!--            android:textColor="#FFFFFF"-->
        <!--            android:textSize="16sp" />-->

        <!-- Birthday -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Birthday: Not born"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Country -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Country: India (IN)"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Subscription -->

    </LinearLayout>

    <!-- Music Player -->




</RelativeLayout>
