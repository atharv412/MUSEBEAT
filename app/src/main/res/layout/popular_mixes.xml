<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#121212"
    android:gravity="center">

    <!-- Popular Mixes Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        android:background="@drawable/popular_mixes_bg"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Background Shape for Image -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/popular_mixes_bg"
                android:gravity="center">

                <!-- Rounded Image -->
                <ImageView
                    android:id="@+id/popularMixImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/welcome_icon_removebg"
                    android:scaleType="centerCrop"
                    android:background="@drawable/popular_mixes_image_shape"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!-- Title Below Image -->
            <TextView
                android:id="@+id/popularMixTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Mixes"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
